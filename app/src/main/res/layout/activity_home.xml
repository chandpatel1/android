<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral70"
    android:orientation="vertical"
    tools:context=".home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="200dp"
            android:layout_weight="1"
            android:src="@drawable/rent__roll_high_resolution_logo_black_transparent" />

        <ImageButton
            android:id="@+id/button_profile"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/material_dynamic_neutral70"
            android:src="@drawable/user2" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        android:text="Category Select"
        android:textSize="35sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/category_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="254dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/verna" />

                    <Button
                        android:id="@+id/button_csbook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="300dp"
                        android:layout_marginTop="205dp"
                        android:text="Book"
                        android:textColorLink="#00BCD4" />

                    <TextView
                        android:id="@+id/textname"
                        android:layout_width="78dp"
                        android:layout_height="41dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="210dp"
                        android:text="verna"
                        android:textAlignment="center"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textprice"
                        android:layout_width="123dp"
                        android:layout_height="41dp"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="210dp"
                        android:text="2000/24h"
                        android:textAlignment="center"
                        android:textSize="24sp" />



                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/category_image1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="match_parent"
                        android:layout_height="254dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/virtus" />

                    <Button
                        android:id="@+id/button_csbook1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="300dp"
                        android:layout_marginTop="215dp"
                        android:text="Book"
                        android:textColorLink="#00BCD4" />

                    <TextView
                        android:id="@+id/textname1"
                        android:layout_width="78dp"
                        android:layout_height="41dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="215dp"
                        android:text="virtus"
                        android:textAlignment="center"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textprice1"
                        android:layout_width="123dp"
                        android:layout_height="41dp"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="215dp"
                        android:text="2200/24h"
                        android:textAlignment="center"
                        android:textSize="24sp" />



                </RelativeLayout>
        </LinearLayout>
    </ScrollView>






</LinearLayout>